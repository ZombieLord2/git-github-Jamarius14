 public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
        }

        private void Button_Click(object sender, RoutedEventArgs e)
        {
            label.Content = "You Must Pick One";
            //pencil
            if (PencilButton.IsChecked ==true)
            {
                label.Content = "Pencil,Very Reliable!";

                pencilImage.Opacity = 100;
            }
            else
            {
                pencilImage.Opacity = 0;
            }
           //pen
            if (PenButton.IsChecked == true)
            {
                label.Content = "Pen, nice choice!";

                penImage.Opacity = 100;
            }
            else
            {
                penImage.Opacity = 0;
            }
            
           //phone
            if (PhoneButton.IsChecked == true)
            {
                label.Content = "Phone, welcome to 2020!";

                phoneImage.Opacity = 100;
            }
            else
            {
                phoneImage.Opacity = 0;
            }
            
            
            //pad
            if (PadButton.IsChecked == true)
            {
                label.Content = "Pad, you must be from the future!";

                padImage.Opacity = 100;
            }
            else
            {
                padImage.Opacity = 0;
            }
        
        }
    }
}
